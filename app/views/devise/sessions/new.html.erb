<div class="container">
  <h2 class="head-title my-5">ログイン</h2>
    <div class="row">
      <div class="col-md-6 my-auto mx-auto">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :"登録したメールアドレス"%>
            <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"パスワード(6文字以上)" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-md btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 my-5">
        <p><会員登録がお済みでない方><br>
          <%= link_to "こちら", new_registration_path(resource_name) %>から会員登録を行ってください。</p>
      </div>
    </div>
</div>
