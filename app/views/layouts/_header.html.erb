<header>
  <nav class="navbar navbar-expand-md navbar-light" style="background-color: #e3f2fd;">
    <div class="container">
      <a class="navbar-brand" href="/"><span class="fas fa-mountain">YAMAZUKI</span></a>
      <%#navbar-toggler:ナビゲーションアイコンの枠、navbar-toggler-icon:三本戦%>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%#メニューで表示させたい要素はcollapseクラスの中に入れる%>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %><%#ログインしてる状態のヘッダー%>
            <li>
              <%= link_to user_path(current_user.id), class: "nav-link text-dark" do  %>
                <span><%= current_user.nickname %>さん<br>マイページ</span>
              <% end %>
            </li>
            <li>
              <%= link_to "投稿", new_post_path, class: "nav-link text-dark" %>
            </li>
            <li>
              <%= link_to "投稿一覧", posts_path, class: "nav-link text-dark" %>
            </li>
            <li>
              <%= link_to "会員一覧", users_path, class: "nav-link text-dark" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link text-dark" %>
            </li>
            <li>
              <%= render 'layouts/search' %>
            </li>
          <% else %> <%#ログインしていない状態のヘッダー%>
            <li>
              <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-dark" %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path, class: "nav-link text-dark" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>