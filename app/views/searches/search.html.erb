<% if @model == "user" %>
	<h3>Users search for "<%= @content %>"</h3>
  <% @records.each do |user| %>
    <div class="col-md 3">
      <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
            <% end %>
            <%= user.nickname %>
          </h4>
          <p class="card-text"><%= user.introduction %></p>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-light" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div></div>
    </div>
    <% end %>
<% elsif @model == "post" %>
	<h3>Posts search for "<%= @content %>"</h3>
	<% @records.each do |post| %>

    <div class="col-md-3">
      <div class="card">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: "200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)</p>
          <%= post.filmed_on %>
          <%= post.user.nickname %>
          <%= render "favorites/favorite-btn", post: post %>
        </div>
      </div>
    </div>
    <% end %>

<% end %>