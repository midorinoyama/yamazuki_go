<h1>マイページ</h1>
<div class="container">
  <%#@user.p%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
  <%= @user.nickname %>
  <%= @user.prefecture %>
  <%= @user.introduction %>
  <%= @user.age %>
  <%= @user.gender %>
  <% if @user.id == current_user.id %>
    <%= link_to "プロフィール編集", edit_user_path(@user) %>
  <% end %>

  <div class="row">
    <% @posts.each do |post| %>

    <div class="col-md-3">
      <div class="card">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: "200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)</p>
          <%= post.filmed_on %>
          <%= post.user.nickname %>
          <%= render "favorites/favorite-btn", post: post %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
