<div class="container">
  <div class="row">
  <div class="col-md-3">
<table class="table">
  <tr><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
  <%= @user.nickname %></tr>
  <tr>
    <th>フォロー</th>
    <th><%= link_to followings_path(@user.id) do %>
          <%= @user.followings.count %>
        <% end %>
    </th>
  </tr>
  <tr>
    <th>フォロワー</th>
    <th><%= link_to followers_path(@user.id) do %>
          <%= @user.followers.count %>
        <% end %>
    </th>
  </tr>
  <tr>
    <% if current_user == @user %>
    <th>いいね！した写真</th>
    <th><%= link_to favorites_path(@user.id) do %>
      <%= @user.favorites.count %>
      <% end %>
    </th>
    <% end %>
  </tr>
</table>

  <% if current_user != @user %>
    <%= render 'users/follow-btn', user: @user %>
  <% else %>
    <%= link_to "プロフィールを編集する" ,edit_user_path(@user) %>
  <% end %>

</div>

<div class="col-md-8 offset-md-1">
  <%= @user.prefecture %>
  <%= @user.introduction %>
  <%= @user.age %>
  <%= @user.gender %>


  <div class="row">
    <% @posts.each do |post| %>

    <div class="col-md-3">
      <div class="card">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: "200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)</p>
          <%= post.filmed_on %>
          <%= post.user.nickname %>
          <%= render "favorites/favorite-btn", post: post %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </div>
  </div>
</div>
