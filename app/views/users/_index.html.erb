<% users.each do |user| %>
    <div class="card-deck col-md-3 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <p class="card-title">
              <%= link_to user_path(user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
              <% end %><br>
              <%= user.nickname %>
            </p>
          <% if current_user != user %><%#自分のアカウントにはフォローボタンを表示させないようにする%>
            <p><%= render 'users/follow-btn', user: user %></p>
          <% end %>
          </div>
        </div>
    </div>
<% end %>