<h2>会員一覧</h2>
<div class="container">
  <div class="row">

    <% @users.each do |user| %>
    <div class="col-md 3">
      <div class="card-deck">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
            <% end %>
            <%= user.nickname %>
          </h4>
          <p class="card-text"><%= user.introduction %></p>
          <%= render 'users/follow-btn', user: user %>
        </div>
      </div></div>
    </div>
    <% end %>
  </div>
</div>