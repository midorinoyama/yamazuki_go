<h2>フォロー</h2>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-md 3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to user_path(user.id) do %>
              <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
            <% end %>
            <%= user.nickname %>
          </h4>
          <p class="card-text"><%= user.introduction %></p>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-light" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>