<% @posts.each do |post| %>
    <div class="card-deck col-md-3 mb-3">
      <div class="card text-center">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 400, 500, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)<br>
            <%= post.filmed_on.strftime('%Y/%m/%d') %><br>
            <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% end %>
          <%= post.user.nickname %>
          <%= render 'favorites/favorite-btn', post: post %></p>
        </div>
      </div>
    </div>
  <% end %>