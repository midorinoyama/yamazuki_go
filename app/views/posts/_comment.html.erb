  <% post_comment.replies.each do |reply| %>
  <tr>
    <td>
      <%= link_to user_path(reply.user.id) do %>
        <%= attachment_image_tag reply.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
        <%= reply.user.nickname %>
      <% end %>
      <%= reply.created_at.strftime('%Y/%m/%d') %>
