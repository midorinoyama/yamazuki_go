<div class="container">
  <div class="row">
    <% @posts.each do |post| %>

    <div class="col-md-3">
      <div class="card">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: "200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)</p>
          <%= post.filmed_on %>
          <%= post.user.nickname %>
          <%= render "favorites/favorite-btn", post: post %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

