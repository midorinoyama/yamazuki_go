<div class="container">
  <div class="row mt-5">
    <div class="col-md-6">
      <%= attachment_image_tag @post, :image, :fill, 400, 500 %>
    </div>
    <div class="col-md-6">

        <div class="field">
          <h1 class="post-heading"><%= link_to user_path(@post.user) do %>
            <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% end %>
          <%= @post.user.nickname %>さんの投稿</h1>
          <p><%= @post.mountain %>(<%= @post.prefecture %>) |
          撮影日:<%= @post.filmed_on.strftime('%Y/%m/%d') %></p>
          <h5 class="text-title"><%= @post.title %></h5>
          <p class="text-body"><%= @post.content %></p>
          <p class="text-time">投稿日:<%= @post.created_at.strftime('%Y/%m/%d') %></p>
        </div>

      <div class="field">
        <% if @post.user == current_user %>
          <%= link_to "投稿内容を編集する", edit_post_path(@post.id) %>
        <% end %>
      </div>
      </div>
    </div>

    <div class="col-md-6">
      <p>コメント一覧(<%= @post.post_comments.count %>)件</p>
      <%= render 'posts/comment', post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>

