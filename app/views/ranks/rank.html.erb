<div class="container">
　<h3 class="head-title my-5">みんながいいね！した写真ランキング</h3>
  <div class="row mt-5">
    <% @post_ranks.each.with_index(1) do |post,i| %>

    <div class="card-deck col-md-4 mb-3">
      <h5><i class="fas fa-crown" style="color: orange;"></i>第<%= i %>位</h5>
      <div class="card text-center">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 400, 500, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)<br>
            <%= post.filmed_on.strftime('%Y/%m/%d') %><br>
            <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% end %>
          <%= post.user.nickname %>
          <%= render 'favorites/favorite-btn', post: post %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>