<div class="container">
  <div class="row mt-5">
    <h2>フォトランキング</h2>
    <% @post_ranks.each.with_index(1) do |post,i| %>
    <p>第<%= i %>位</p>
    <div class="col-md-3">
      <div class="card">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, size: "200x200", class: "card-img-top" %>
        <% end %>
        <div class="card-body ">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)
          <%= post.filmed_on.strftime('%Y/%m/%d') %></p>
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% end %>
          <%= post.user.nickname %>
          <%= render 'favorites/favorite-btn', post: post %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>