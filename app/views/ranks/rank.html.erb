<div class="container">
　<h3 class="head-title my-5">みんながいいね！した写真ランキング(1位～6位)</h3>
  <div class="row mt-5">
    <% @post_ranks.each.with_index(1) do |post,i| %>
    <div class="card-deck col-sm-6 col-lg-4 mb-3">
      <div class="card text-center">
        <h5><i class="fas fa-crown" style="color: orange;"></i> 第<%= i %>位 <i class="fas fa-heart" style="color: pink;"></i> <%= post.favorites.count %></h5>
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 400, 500, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.mountain %>(<%= post.prefecture %>)<br>
            <%= post.filmed_on.strftime('%Y/%m/%d') %><br>
            <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% end %>
          <%= post.user.nickname %></p>
          <div id="favorite_btn_<%= post.id %>">
            <%= render 'favorites/favorite-btn', post: post %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>